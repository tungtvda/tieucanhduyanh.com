<div class="col-md-9">
    <div class="blog-post wow fadeInUp animated" style="visibility: visible; -webkit-animation: fadeInUp;">
        <img class="img-responsive" src="{Img}" alt="{Name}" title="{Name}">
        <h1><a>{Name}</a></h1>
        <span class="author"><i class="fa fa-pencil"></i><a> Tin tức</a></span>
        <span class="review"><i class="fa fa-eye"></i><a> {View} lượt xem</a> </span>
        <span class="date-time"><i class="fa fa-dashboard"></i><a>{Created}</a> </span>
        <div class="price-container info-container ">
            <div class="addthis_native_toolbox"></div>
            <!-- Go to www.addthis.com/dashboard to customize your tools -->
            <script type="text/javascript"
                    src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-538d523363c2ee15"></script>
        </div>
       <div style="text-align: justify; margin-bottom: 20px">
           {NoiDung}
       </div>
        <div class="fb-comments" data-href="{Link_tintuc}" data-width="100%" data-numposts="1"
             data-colorscheme="light"></div>
    </div>


    <div class="clearfix filters-container m-t-10">
        <div class="row">
            <div style="width: 100%" class="col col-sm-6 col-md-2">
                <div class="filter-tabs">
                    <ul id="filter-tabs" class="nav nav-tabs nav-tab-box nav-tab-fa-icon">
                        <li class="active">
                            <a style="font-size: 18px" data-toggle="tab" href="javascript:void()"><i class="icon fa fa-th-list"></i>Tin tức khác</a>
                        </li>

                    </ul>
                </div><!-- /.filter-tabs -->
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div>
{tintuckhac}

</div>