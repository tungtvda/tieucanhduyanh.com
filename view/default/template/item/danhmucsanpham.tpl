<div class="col-sm-6 col-md-3 wow fadeInUp animated" style="visibility: visible; -webkit-animation: fadeInUp;">
    <div class="products">

        <div class="product">
            <div class="product-image">
                <div class="image">
                    <a href="{Link}"><img style="width: 100%" src="{Img}" alt="{Name}" title="{Name}"></a>
                </div><!-- /.image -->

                <div class="tag {bieutuong}"><span>{trangthai}</span></div>
            </div><!-- /.product-image -->


            <div style="text-align: center" class="product-info text-left">
                <h3 class="name"><a href="{Link}">{Name}</a></h3>

                <div class="description"></div>

                <div class="product-price">
				<span class="price">
					{GiaMoi}			</span>
                    <span {an} class="price-before-discount">{Giacu}</span>

                </div><!-- /.product-price -->

            </div><!-- /.product-info -->
            <div class="cart clearfix animate-effect">
                <div class="action">
                    <ul class="list-unstyled">
                        <li class="add-cart-button btn-group">
                            <button class="btn btn-primary icon" data-toggle="dropdown" type="button">
                                <i class="fa fa-shopping-cart"></i>
                            </button>
                            <a href="{Link_dh}" class="btn btn-primary" type="button">Đặt hàng</a>

                        </li>

                    </ul>
                </div><!-- /.action -->
            </div><!-- /.cart -->
        </div><!-- /.product -->

    </div><!-- /.products -->
</div><!-- /.item -->