<div  class="item">
    <div class="products">
        <div class="hot-deal-wrapper">
            <div class="image">
                <img style="width: 100%" src="{Img}" alt="{Name}" title="{Name}">
            </div>

            <div style="background-color: red" class="sale-offer-tag"><span>HOT</span></div>

        </div>
        <!-- /.hot-deal-wrapper -->

        <div style="text-align: center" class="product-info text-left m-t-20">
            <h3 class="name"><a href="{Link}">{Name}</a></h3>



            <div class="product-price">
								<span class="price">
									{GiaMoi}
								</span>

                <span {an} class="price-before-discount">{Giacu}</span>

            </div>
            <!-- /.product-price -->

        </div>
        <!-- /.product-info -->

        <div style="text-align: center; padding-left: 70px" class="cart clearfix animate-effect">
            <div  class="action">

                <div  class="add-cart-button btn-group">
                    <button class="btn btn-primary icon" data-toggle="dropdown" type="button">
                        <i class="fa fa-shopping-cart"></i>
                    </button>
                    <a href="{Link_dh}" class="btn btn-primary" type="button">Đặt hàng</a>

                </div>

            </div>
            <!-- /.action -->
        </div>
        <!-- /.cart -->
    </div>
</div>